<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mini Game</title>
    <style>
        body { text-align: center; font-family: Arial, sans-serif; }
        canvas { background: #ddd; display: block; margin: 20px auto; }
        button { font-size: 20px; padding: 10px 20px; margin-top: 20px; }
    </style>
</head>
<body>
    <h1>Попробуй остановить круг в центре!</h1>
    <canvas id="gameCanvas" width="400" height="100"></canvas>
    <button onclick="stopCircle()">СТОП</button>
    <p id="result"></p>

    <script>
        const canvas = document.getElementById("gameCanvas");
        const ctx = canvas.getContext("2d");
        let x = 20;
        let speed = 2;
        let moving = true;
        const center = canvas.width / 2;

        function draw() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            ctx.fillStyle = "red";
            ctx.beginPath();
            ctx.arc(x, canvas.height / 2, 20, 0, Math.PI * 2);
            ctx.fill();
            
            if (moving) {
                x += speed;
                if (x > canvas.width - 20 || x < 20) speed = -speed;
                requestAnimationFrame(draw);
            }
        }

        function stopCircle() {
            moving = false;
            const distance = Math.abs(x - center);
            let level;
            if (distance < 10) level = "COBRA";
            else if (distance < 20) level = "DRAGON";
            else if (distance < 30) level = "IMPERATOR";
            else if (distance < 40) level = "MAGISTER";
            else if (distance < 50) level = "OVERLORD";
            else if (distance < 60) level = "AVENGER";
            else if (distance < 70) level = "TITAN";
            else level = "HERO";
            
            document.getElementById("result").innerText = `Ты получил уровень: ${level}`;
        }

        draw();
    </script>
</body>
</html>
